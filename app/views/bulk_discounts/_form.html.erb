<%= form_with model: [merchant, bulk_discount], method: method, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, value: bulk_discount.name %>

  <%= f.label :item_threshold %>
  <%= f.number_field :item_threshold, value: bulk_discount.item_threshold %>

  <%= f.label :percent_discount %>
  <%= f.number_field :percent_discount value: bulk_discount.percent_discount%>

  <%= f.submit %>
<% end %>
