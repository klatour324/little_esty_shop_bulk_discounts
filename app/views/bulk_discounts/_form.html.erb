<%= form_with url: path, method: method, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :item_threshold %>
  <%= f.number_field :item_threshold %>

  <%= f.label :percent_discount %>
  <%= f.number_field :percent_discount %>

  <%= f.submit button_text %>
<% end %>
