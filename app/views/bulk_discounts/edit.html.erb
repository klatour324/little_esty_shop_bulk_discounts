<%= form_with url: edit_merchant_bulk_discount_path(@merchant, @bulk_discount), method: :patch, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :item_threshold %>
  <%= f.number_field :item_threshold %>

  <%= f.label :percent_discount %>
  <%= f.number_field :percent_discount %>

  <%= f.submit "Update" %>
<% end %>
